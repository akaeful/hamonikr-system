#!/bin/bash

readonly SCRIPT_NAME=$(basename $0)

log() {
  echo "$@"
  logger -p user.notice -t $SCRIPT_NAME "$@"
}

err() {
  echo "$@" >&2
  logger -p user.error -t $SCRIPT_NAME [ERROR] "$@"
}

if [ -f "/etc/hamonikr/info" ] ; then

    if [ -f /usr/share/mint-mirrors/linuxmint.list ] ; then
        cp -a /usr/share/mint-mirrors/linuxmint.list{,.bak}
        cp -a /usr/share/hamonikr/mint-mirrors/linuxmint.list /usr/share/mint-mirrors/linuxmint.list
    fi
    # log "Update Linuxmint mirror in /usr/share/mint-mirrors/linuxmint.list"
    echo "Update Linuxmint mirror in /usr/share/mint-mirrors/linuxmint.list"
fi