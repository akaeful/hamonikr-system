#!/bin/bash

if [ -f "/etc/hamonikr/info" ] ; then

    status="$(dpkg-query -W --showformat='${db:Status-Status}' zoom 2>&1)"
    if [ ! $? = 0 ] || [ ! "$status" = installed ]; then

        if [ -d "/opt/zoom/platforminputcontexts" ] \
            && [ -f "/usr/lib/x86_64-linux-gnu/qt5/plugins/platforminputcontexts/libqt5im-nimf.so" ] ; then
            ln -s /usr/lib/x86_64-linux-gnu/qt5/plugins/platforminputcontexts/libqt5im-nimf.so /opt/zoom/platforminputcontexts
        fi

    fi

fi